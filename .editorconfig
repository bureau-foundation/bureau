# EditorConfig helps maintain consistent coding styles across editors.
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go: tabs are enforced by gofmt
[*.go]
indent_style = tab

# Python: 4 spaces (black convention)
[*.py]
indent_size = 4

# Bazel/Starlark: 4 spaces (buildifier convention)
[*.bazel]
indent_size = 4

[*.bzl]
indent_size = 4

[BUILD]
indent_size = 4

[BUILD.bazel]
indent_size = 4

[WORKSPACE]
indent_size = 4

[WORKSPACE.bazel]
indent_size = 4

[MODULE.bazel]
indent_size = 4

# Markdown: preserve trailing whitespace (line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
