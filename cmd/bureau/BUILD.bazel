load("@rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "bureau_lib",
    srcs = [
        "doc.go",
        "main.go",
    ],
    importpath = "github.com/bureau-foundation/bureau/cmd/bureau",
    visibility = ["//visibility:private"],
    deps = [
        "//cmd/bureau/cli",
        "//cmd/bureau/commands",
    ],
)

go_binary(
    name = "bureau",
    embed = [":bureau_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "bureau_test",
    srcs = ["main_test.go"],
    embed = [":bureau_lib"],
    deps = ["//cmd/bureau/cli"],
)
